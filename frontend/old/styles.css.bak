/* =============================
   TOKENS (tema del login)
   ============================= */
:root {
  --bg: #0f172a;              /* slate-900 */
  --card: #111827;            /* gray-900 */
  --muted: #94a3b8;           /* slate-400 */
  --text: #e5e7eb;            /* gray-200 */
  --accent: #3b82f6;          /* blue-500 */
  --accent-hover: #2563eb;    /* blue-600 */
  --danger: #ef4444;          /* red-500 */
  --ring: #60a5fa;            /* blue-400 */
  --success: #22c55e;         /* green-500 */

  --radius: 12px;
  --shadow: 0 10px 30px rgba(0,0,0,0.35);
  --border: 1px solid rgba(255,255,255,0.08);
  --gap: 16px;
}

* { box-sizing: border-box; }

/* =============================
   BASE
   ============================= */
body {
  margin: 0;
  min-height: 100vh;
  background:
    radial-gradient(60rem 60rem at 120% -10%, rgba(59,130,246,0.15), transparent 60%),
    radial-gradient(60rem 60rem at -10% 120%, rgba(34,197,94,0.12), transparent 60%),
    var(--bg);
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans";
  color: var(--text);
  padding: 20px;
}

h1 { color: var(--text); margin: 0 0 12px; }

section {
  margin-bottom: 30px;
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
  backdrop-filter: blur(6px);
  border: var(--border);
  border-radius: var(--radius);
  padding: 20px;
  box-shadow: var(--shadow);
}

/* =============================
   CONTROLES (mismo look que login)
   ============================= */
button,
input[type="button"],
input[type="submit"] {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  gap: .5rem;
  padding: .7rem .95rem;
  border: 0;
  border-radius: 10px;
  background: var(--accent);
  color: #fff;
  font-weight: 600;
  letter-spacing: .2px;
  cursor: pointer;
  transition: transform .02s ease, background .2s ease, opacity .2s ease, box-shadow .2s ease;
}
button:hover { background: var(--accent-hover); }
button:active { transform: translateY(1px); }
button[disabled] { opacity: .6; cursor: not-allowed; }

select,
input[type="text"],
input[type="search"],
input[type="number"],
input[type="file"] {
  padding: .8rem .9rem;
  border: 1px solid rgba(255,255,255,0.12);
  background: rgba(17,24,39,0.8);
  color: var(--text);
  border-radius: 10px;
  outline: none;
  transition: border-color .2s, box-shadow .2s, background .2s;
}
select { margin-left: 5px; }
input::placeholder { color: #9ca3af; }
select:focus,
input:focus {
  border-color: var(--ring);
  box-shadow: 0 0 0 4px rgba(96,165,250,0.18);
  background: rgba(17,24,39,0.95);
}

/* =============================
   LISTAS
   ============================= */
ul { list-style: none; padding-left: 0; margin: 0; }
li {
  background: rgba(255,255,255,0.03);
  border: var(--border);
  padding: 10px;
  border-radius: 10px;
}

/* =============================
   MENSAJES / NOTIFICACIONES
   (ocultos por defecto)
   ============================= */
.mensaje {
  display: none;                 /* oculto hasta que haya contenido */
  margin-top: 1em;
  padding: 1em;
  border-radius: 10px;
  font-weight: 600;
  background: rgba(255,255,255,0.03);
  border: var(--border);
}
.mensaje.activo { display: block; }
.mensaje.error  { background-color: rgba(239,68,68,0.12); color: #fecaca; border-color: rgba(239,68,68,.35); }
.mensaje.exito  { background-color: rgba(34,197,94,0.12); color: #bbf7d0; border-color: rgba(34,197,94,.35); }

/* =============================
   MASONRY "PINTEREST" (2 columnas)
   ============================= */
/* Si el contenedor viene con .grid-container de otros lados, anulamos grid aquí */
#contenedorCategorias.grid-container {
  display: block !important;
  grid-template-columns: unset !important;
}

/* Masonry por columns */
#contenedorCategorias {
  column-count: 2;
  column-gap: 20px;
  max-width: 1200px;
  margin-inline: auto;
}

/* Cada bloque de categoría es una “tarjeta” masonry */
#contenedorCategorias .categorias {
  display: block;
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
  backdrop-filter: blur(6px);
  border: var(--border);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  margin: 0 0 20px;
  padding: 14px;
  break-inside: avoid;
  -webkit-column-break-inside: avoid;
  -moz-column-break-inside: avoid;
  overflow: hidden;          /* evita líneas/artefactos */
  contain: paint;            /* mejora repintado */
  animation: fadeUp .35s ease both;
}

.nombre-categoria {
  font-weight: 700;
  letter-spacing: .2px;
  margin-bottom: 10px;
  color: var(--text);
}

/* Dentro de cada categoría, la lista de docs en grid simple */
#contenedorCategorias .categorias > ul { display: grid; gap: 12px; }
#contenedorCategorias .categorias > ul > li {
  display: flex;
  align-items: center;
  flex-wrap: wrap;           /* botones extra pasan abajo */
  gap: 8px;
  background: rgba(17,24,39,0.6);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 10px;
  padding: 10px;
  animation: fadeUp .35s ease both;
}

/* Botón “Ver” (primer botón) alineado a la derecha de la fila superior */
#contenedorCategorias .categorias > ul > li > button:first-of-type { margin-left: auto; }
/* Botones extra con separación arriba si saltan a segunda línea */
#contenedorCategorias .categorias > ul > li > button:not(:first-of-type) { margin-top: 8px; }

/* (Opcional) Si envuelves el nombre en .file-name, aplicamos ellipsis */
.file-name { flex: 1 1 auto; min-width: 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

/* =============================
   OTROS CONTENEDORES EN GRID (si los usas)
   ============================= */
.grid-container { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; }

/* =============================
   ZONA DE SUBIDA
   ============================= */
#zonaSubida {
  border: 2px dashed rgba(255,255,255,0.25);
  border-radius: var(--radius);
  padding: 16px;
  text-align: center;
  color: var(--muted);
  transition: background .2s, border-color .2s;
}
#zonaSubida.dragover {
  border-color: var(--accent);
  background-color: rgba(59,130,246,0.12);
}

/* =============================
   MODAL UNIFICADO (look login)
   ============================= */
.modal { display:none; position:fixed; inset:0; background:rgba(0,0,0,.45); z-index:999; }
.modal.show { display:flex; align-items:center; justify-content:center; }
.modal-content {
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
  backdrop-filter: blur(6px);
  border: var(--border);
  border-radius: var(--radius);
  width: min(560px, 92vw);
  padding: 16px 20px;
  box-shadow: var(--shadow);
  position: relative;
}
.minimizar {
  position: absolute; right: 12px; top: 10px;
  cursor: pointer; font-weight: 700; color: var(--muted);
}

/* Modal decisión y utilidades */
.nombre-doc { font-weight: 700; word-break: break-word; }
.decision-row { display:flex; gap:16px; justify-content:space-between; align-items:center; margin:8px 0 6px; }
.diff-wrap { margin:8px 0 10px; }
.diff-label { margin-bottom:6px; color: var(--muted); }
.diff-bar { height:10px; background:#334155; border-radius:999px; overflow:hidden; }
.diff-bar-fill { height:100%; background:#2e86de; width:0%; transition:width .25s ease; }
.diff-hint { font-size:.85rem; color:#94a3b8; margin-top:6px; }
.decision-msg { margin:10px 0 0; color: var(--text); }
.modal-actions { display:flex; gap:10px; justify-content:flex-end; margin-top:16px; }
.modal-actions .secondary { background: rgba(255,255,255,0.08); color: var(--text); }
.modal-actions .danger { background: var(--danger); color:#fff; }
.modal-actions .primary { background: var(--accent); color:#fff; }
.kbd-hints { margin-top:10px; font-size:.9rem; color:#94a3b8; }
.kbd-hints kbd { background:#0b1220; border:1px solid #1f2937; border-bottom-width:2px; border-radius:4px; padding:1px 5px; color:#e5e7eb; }

/* =============================
   PROGRESO
   ============================= */
.progreso-item { margin-bottom: 10px; color: var(--muted); }
.progreso-barra { height: 10px; background-color: #334155; border-radius: 999px; overflow: hidden; }
.progreso-barra > span { display:block; height: 100%; width: 0%; background-color: var(--success); transition: width .3s ease; }

/* =============================
   RESPONSIVE
   ============================= */
@media (max-width: 768px) {
  body { padding: 14px; }
  #contenedorCategorias { column-count: 1; column-gap: 0; }
  section { padding: 16px; }
}

/* =============================
   ANIMACIONES / ACCESIBILIDAD
   ============================= */
@keyframes fadeUp {
  from { opacity: 0; transform: translateY(6px); }
  to   { opacity: 1; transform: translateY(0); }
}
@media (prefers-reduced-motion: reduce) {
  * { animation: none !important; transition: none !important; }
}
